{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "type": "module",
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
